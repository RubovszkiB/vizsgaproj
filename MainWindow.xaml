<Window x:Class="RMBCoachingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RMB Coaching - Admin App" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="RMB Coaching Admin" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"/>
                <TextBlock Text="Edzők és edzéstervek kezelése" 
                          Foreground="#ecf0f1" 
                          FontSize="14" 
                          Margin="20,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Edzők lap -->
            <TabItem Header="Edzők">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="84*"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="847*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="3">
                        <Button x:Name="btnRefreshTrainers" Content="Frissítés" Click="BtnRefreshTrainers_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnAddTrainer" Content="Új edző" Click="BtnAddTrainer_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnEditTrainer" Content="Szerkesztés" Click="BtnEditTrainer_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnDeleteTrainer" Content="Törlés" Click="BtnDeleteTrainer_Click" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Data Grid -->
                    <DataGrid x:Name="dgTrainers" Grid.Row="1" 
                             AutoGenerateColumns="False" 
                             IsReadOnly="True"
                             SelectionMode="Single" Grid.ColumnSpan="3">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Szakértelem" Binding="{Binding Specialty}" Width="150"/>
                            <DataGridTextColumn Header="Tapasztalat (év)" Binding="{Binding ExperienceYears}" Width="100"/>
                            <DataGridTextColumn Header="Képzett sportolók" Binding="{Binding TrainedAthletes}" Width="120"/>
                            <DataGridTextColumn Header="Leírás" Binding="{Binding Description}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Edzéstervek lap -->
            <TabItem Header="Edzéstervek">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnRefreshPlans" Content="Frissítés" Click="BtnRefreshPlans_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnAddPlan" Content="Új edzésterv" Click="BtnAddPlan_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnEditPlan" Content="Szerkesztés" Click="BtnEditPlan_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnDeletePlan" Content="Törlés" Click="BtnDeletePlan_Click" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Data Grid -->
                    <DataGrid x:Name="dgTrainingPlans" Grid.Row="1" 
                             AutoGenerateColumns="False" 
                             IsReadOnly="True"
                             SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Cím" Binding="{Binding Title}" Width="150"/>
                            <DataGridTextColumn Header="Kategória" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="Időtartam (hét)" Binding="{Binding DurationWeeks}" Width="100"/>
                            <DataGridTextColumn Header="Ár (Ft)" Binding="{Binding Price}" Width="80"/>
                            <DataGridTextColumn Header="Edző ID" Binding="{Binding TrainerId}" Width="70"/>
                            <DataGridTextColumn Header="Leírás" Binding="{Binding Description}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Statisztikák lap -->
            <TabItem Header="Statisztikák">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Áttekintés" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <WrapPanel>
                            <!-- Edző statisztikák -->
                            <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20" Padding="15" Background="#ecf0f1">
                                <StackPanel>
                                    <TextBlock Text="Edzők" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="tbTotalTrainers" FontSize="14"/>
                                    <TextBlock x:Name="tbAvgExperience" FontSize="14"/>
                                    <TextBlock x:Name="tbTotalAthletes" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <!-- Edzéstervek statisztikák -->
                            <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20" Padding="15" Background="#ecf0f1">
                                <StackPanel>
                                    <TextBlock Text="Edzéstervek" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="tbTotalPlans" FontSize="14"/>
                                    <TextBlock x:Name="tbAvgPrice" FontSize="14"/>
                                    <TextBlock x:Name="tbAvgDuration" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <!-- Kategóriák szerinti bontás -->
                            <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20" Padding="15" Background="#ecf0f1">
                                <StackPanel>
                                    <TextBlock Text="Kategóriák" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                    <ItemsControl x:Name="icCategories"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Kész"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="tbConnectionStatus" Text="Kapcsolat: Ismeretlen"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>