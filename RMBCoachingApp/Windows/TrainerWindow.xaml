<Window x:Class="RMBCoachingApp.Windows.TrainerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edző kezelése" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Cím -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                  FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Űrlap -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Név -->
                <TextBlock Text="Név*" Margin="0,5"/>
                <TextBox x:Name="txtName" Text="{Binding Trainer.Name, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,2,0,10"/>
                
                <!-- Szakértelem -->
                <TextBlock Text="Szakértelem*" Margin="0,5"/>
                <ComboBox x:Name="cbSpecialty" SelectedItem="{Binding Trainer.Specialty}" 
                         Margin="0,2,0,10">
                    <ComboBoxItem>Labdarúgás</ComboBoxItem>
                    <ComboBoxItem>Kondicionálás</ComboBoxItem>
                    <ComboBoxItem>Általános sportedzés</ComboBoxItem>
                    <ComboBoxItem>Erőnlét</ComboBoxItem>
                    <ComboBoxItem>Sebesség és ügyesség</ComboBoxItem>
                </ComboBox>
                
                <!-- Tapasztalat -->
                <TextBlock Text="Tapasztalat (év)*" Margin="0,5"/>
                <TextBox x:Name="txtExperience" Text="{Binding Trainer.ExperienceYears}" 
                        Margin="0,2,0,10"/>
                
                <!-- Képzett sportolók -->
                <TextBlock Text="Képzett sportolók" Margin="0,5"/>
                <TextBox x:Name="txtTrainedAthletes" Text="{Binding Trainer.TrainedAthletes}" 
                        Margin="0,2,0,10"/>
                
                <!-- Értékelés -->
                <TextBlock Text="Értékelés (0-5)" Margin="0,5"/>
                <TextBox x:Name="txtRating" Text="{Binding Trainer.Rating}" 
                        Margin="0,2,0,10"/>
                
                <!-- Email -->
                <TextBlock Text="Email" Margin="0,5"/>
                <TextBox x:Name="txtEmail" Text="{Binding Trainer.Email}" 
                        Margin="0,2,0,10"/>
                
                <!-- Telefon -->
                <TextBlock Text="Telefon" Margin="0,5"/>
                <TextBox x:Name="txtPhone" Text="{Binding Trainer.Phone}" 
                        Margin="0,2,0,10"/>
                
                <!-- Aktív -->
                <CheckBox x:Name="cbIsActive" IsChecked="{Binding Trainer.IsActive}" 
                         Content="Aktív edző" Margin="0,10,0,10"/>
                
                <!-- Leírás -->
                <TextBlock Text="Leírás" Margin="0,5"/>
                <TextBox x:Name="txtDescription" Text="{Binding Trainer.Description}" 
                        AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                        VerticalScrollBarVisibility="Auto" Margin="0,2,0,10"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Gombok -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Mégse" Width="80" Margin="0,0,10,0" 
                    Click="BtnCancel_Click"/>
            <Button x:Name="btnSave" Content="Mentés" Width="80" 
                    Click="BtnSave_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>