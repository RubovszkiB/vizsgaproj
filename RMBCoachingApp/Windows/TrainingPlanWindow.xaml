<Window x:Class="RMBCoachingApp.Windows.TrainingPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edzésterv kezelése" Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Cím -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                  FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Űrlap -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Cím -->
                    <TextBlock Text="Cím*" Margin="0,5"/>
                    <TextBox x:Name="txtTitle" Text="{Binding TrainingPlan.Title}" 
                            Margin="0,2,0,10"/>
                    
                    <!-- Kategória -->
                    <TextBlock Text="Kategória*" Margin="0,5"/>
                    <ComboBox x:Name="cbCategory" SelectedItem="{Binding TrainingPlan.Category}" 
                             Margin="0,2,0,10">
                        <ComboBoxItem>Labdarúgás</ComboBoxItem>
                        <ComboBoxItem>Kondicionálás</ComboBoxItem>
                        <ComboBoxItem>Általános sportedzés</ComboBoxItem>
                        <ComboBoxItem>Erőnlét</ComboBoxItem>
                        <ComboBoxItem>Súlyzós edzés</ComboBoxItem>
                        <ComboBoxItem>Kardio</ComboBoxItem>
                    </ComboBox>
                    
                    <!-- Nehézségi szint -->
                    <TextBlock Text="Nehézségi szint" Margin="0,5"/>
                    <ComboBox x:Name="cbDifficulty" SelectedItem="{Binding TrainingPlan.DifficultyLevel}" 
                             Margin="0,2,0,10">
                        <ComboBoxItem>Kezdő</ComboBoxItem>
                        <ComboBoxItem>Közép</ComboBoxItem>
                        <ComboBoxItem>Haladó</ComboBoxItem>
                    </ComboBox>
                    
                    <!-- Időtartam -->
                    <TextBlock Text="Időtartam (hét)*" Margin="0,5"/>
                    <TextBox x:Name="txtDuration" Text="{Binding TrainingPlan.DurationWeeks}" 
                            Margin="0,2,0,10"/>
                    
                    <!-- Heti edzések -->
                    <TextBlock Text="Heti edzések száma" Margin="0,5"/>
                    <TextBox x:Name="txtSessions" Text="{Binding TrainingPlan.SessionsPerWeek}" 
                            Margin="0,2,0,10"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Ár -->
                    <TextBlock Text="Ár (Ft)*" Margin="0,5"/>
                    <TextBox x:Name="txtPrice" Text="{Binding TrainingPlan.Price}" 
                            Margin="0,2,0,10"/>
                    
                    <!-- Edző -->
                    <TextBlock Text="Edző*" Margin="0,5"/>
                    <ComboBox x:Name="cbTrainer" DisplayMemberPath="Name" 
                             SelectedValuePath="Id"
                             SelectedValue="{Binding TrainingPlan.TrainerId}"
                             ItemsSource="{Binding Trainers}" 
                             Margin="0,2,0,10"/>
                    
                    <!-- Publikálva -->
                    <CheckBox x:Name="cbIsPublished" IsChecked="{Binding TrainingPlan.IsPublished}" 
                             Content="Publikálva" Margin="0,10,0,10"/>
                    
                    <!-- Vásárlások száma -->
                    <TextBlock Text="Vásárlások" Margin="0,5"/>
                    <TextBox x:Name="txtPurchaseCount" Text="{Binding TrainingPlan.PurchaseCount}" 
                            IsReadOnly="True" Margin="0,2,0,10" Background="#f0f0f0"/>
                    
                    <!-- Létrehozás dátuma -->
                    <TextBlock Text="Létrehozva" Margin="0,5"/>
                    <TextBox x:Name="txtCreatedDate" 
                            Text="{Binding TrainingPlan.CreatedDate, StringFormat=yyyy.MM.dd HH:mm}"
                            IsReadOnly="True" Margin="0,2,0,10" Background="#f0f0f0"/>
                </StackPanel>
            </Grid>
            
            <!-- Leírás -->
            <TextBlock Text="Leírás" Margin="0,20,0,5" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtDescription" Grid.ColumnSpan="2"
                    Text="{Binding TrainingPlan.Description}" 
                    AcceptsReturn="True" TextWrapping="Wrap" Height="100"
                    VerticalScrollBarVisibility="Auto" Margin="0,2,0,10"/>
        </ScrollViewer>
        
        <!-- Gombok -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Mégse" Width="80" Margin="0,0,10,0" 
                    Click="BtnCancel_Click"/>
            <Button x:Name="btnSave" Content="Mentés" Width="80" 
                    Click="BtnSave_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>